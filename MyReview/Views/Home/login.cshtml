
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My Review | Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/ionicons.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <!-- Ionicons -->

    <link href="~/Content/jquery-jvectormap.css" rel="stylesheet" />
    <!-- jvectormap -->



    <link href="~/Content/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/AdminLTE.min.css" rel="stylesheet" />

    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <link rel="shortcut icon" href="~/Content/img/favicon.png" />

    <link href="~/Content/new-style.css" rel="stylesheet" />
</head>
<body id="bg">
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="dist/img/MyReview.jpeg" class="brand_logo" alt="Logo">

                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">
                    <form method="post" action="~/Home/Validate">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="email" type="text" class="form-control input_user" name="email" placeholder="Email">
                        </div>
                        <br>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="email" type="password" class="form-control input_pass" name="password" placeholder="Password">
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <!-- <input type="checkbox" class="custom-control-input" id="customControlInline">
                                <label class="custom-control-label" for="customControlInline">Remember me</label> -->

                            </div>
                        </div>
                    </form>
                </div>
                <div class="d-flex justify-content-center mt-3 login_container">
                    <input type="submit" name="button" class="btn" value="Login" />
                </div>
                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        <a href="#" class="ml-2"></a>
                    </div>
                    <div class="d-flex justify-content-center links">
                        <a href="#"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>